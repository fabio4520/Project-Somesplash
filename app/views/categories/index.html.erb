<h1>Categories#index</h1>
<p>Find me in app/views/categories/index.html.erb</p>

<% @categories.each do |category| %>
  <div>

      <% if category.avatar.attached? %>
      <div>
        <%= image_tag category.avatar %>
      </div>
      <% end %>

    <div>
      <h2><%= category.name  %></h2>
      <span> Cantidad de fotos: <%= category.photos_count  %></span>
      <p><%= category.description  %></p>
    </div>

  </div>
<% end %>
