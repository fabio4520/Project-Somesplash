<%= form_with model: category do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% category.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% category.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :avatar %><br>
    <%= form.file_field :avatar, accept: "image/png, image/jpeg" %>
  </div>

  <div>
    <%= form.submit %>
  </div>

  <span> <%= link_to "Back", "/categories/" %></span>
<% end %>